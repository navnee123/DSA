package Memoziation;

public class facByRecursion {
	public facByRecursion() {
		for(int i=0;i<this.arr.length;i++) {
			arr[i]=-1;
		}
	}
	
	int [] arr= new int[100];
	
	public int facByMemo(int n) {
		int fac=0;
	   if(n==0 || n==1) {
		   return n;
	   }else if(arr[n]!=-1) {
		   return arr[n];
	   }else {
		   fac=facByMemo(n-1)*n;
		   arr[n]=fac;
		   return fac;
	   }
	}
	
	
	public static void main(String[] args) {
		System.out.println(new facByRecursion().facByMemo(25));
	}

}
