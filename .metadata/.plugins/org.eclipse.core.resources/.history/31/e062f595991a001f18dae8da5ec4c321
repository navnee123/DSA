package sorting;

public class bubble {

	public int sort(int [] arr) {
		boolean swap;
		int n=arr.length;
		for(int i=0;i<n-1;i++) {
			 swap=false;
			for(int j=0;j<n-i-1;j++) {
				if(arr[j]>arr[j+1]) {
					int temp=arr[j];
					arr[j]=arr[j+1];
					arr[j+1]=temp;
					swap=true;
				}
			}
			if(swap==false) {
				break;
			}
		}
		return n;
	}
	
	boolean print(int [] arr) {
		int n=arr.length;
		for(int i=0;i<n;i++) {
			System.out.println(arr[i]+" ");
		}
		return false;
		
	}
	
	public static void main(String[] args) {
		int [] arr= {34,74,83,29,48};
		
		System.out.println(new bubble().sort(arr));
		System.out.println(new bubble().print(arr));

	
	}
}
